<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.porcheron.cocurator" >

    <uses-permission
        android:required="true"
        android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission
        android:required="true"
        android:name="android.permission.BLUETOOTH" />
    <uses-permission
        android:required="true"
        android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission
        android:required="true"
        android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission
        android:required="true"
        android:name="android.permission.INTERNET"/>

    <application
        android:name=".CoCurator"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="uk.porcheron.ace.ble.BleBackgroundService"
            android:exported="false" />

        <activity
            android:name=".activity.TimelineActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_timeline"
            android:theme="@style/FullscreenTheme" >
        </activity>

        <activity
            android:name=".activity.BleActivity"
            android:label="@string/title_activity_ble" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
